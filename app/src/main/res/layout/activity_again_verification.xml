<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:paddingStart="@dimen/dp_100"
              android:paddingEnd="@dimen/dp_100"
              android:gravity="center"
              android:orientation="vertical">

    <EditText
            android:id="@+id/tvOptorCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_edit"
            android:singleLine="true"
            android:imeOptions="actionDone"
            android:gravity="center"
            android:hint="@string/input_username"
            android:paddingBottom="30dp"
            android:paddingStart="@dimen/dp_5"
            android:paddingEnd="@dimen/dp_1"
            android:paddingTop="@dimen/sp_24"
            android:textSize="@dimen/sp_24"/>

    <EditText
            android:id="@+id/tvOptorPwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_edit"
            android:singleLine="true"
            android:inputType="textPassword"
            android:imeOptions="actionDone"
            android:gravity="center"
            android:hint="@string/input_password"
            android:paddingBottom="30dp"
            android:paddingStart="@dimen/dp_5"
            android:paddingEnd="@dimen/dp_1"
            android:paddingTop="@dimen/sp_24"
            android:textSize="@dimen/sp_24"/>

    <Button
            android:id="@+id/butVerify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@drawable/bg_but"
            android:paddingBottom="30dp"
            android:paddingTop="30dp"
            android:text="验证管理员"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_24"/>

    <TextView
            android:id="@+id/tvInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:drawableLeft="@mipmap/gantanhao"
            android:gravity="center"
            android:textColor="@color/colorAccent"
            android:text="请输入用户名和密码"
            android:drawablePadding="@dimen/dp_8"
            android:textSize="@dimen/sp_24"/>

</LinearLayout>